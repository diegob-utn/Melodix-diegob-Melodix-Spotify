@model Melodix.MVC.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Melodix</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <style>
        :root {
            --bg: #0D1017;
            --panel-bg: #0F131A;
            --ui-bg: #0B0E14;
            --line-color: #11151C;
            --text-color: #BFBDB6;
            --ui-text-color: #565B66;
            --accent: #E6B450;
            --primary: #59C2FF;
            --success: #7FD962;
            --error: #D95757;
        }

        body {
            background: linear-gradient(135deg, var(--bg) 0%, var(--ui-bg) 100%);
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .register-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .register-card {
            background-color: var(--panel-bg);
            border: 1px solid var(--line-color);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            padding: 2rem;
            width: 100%;
            max-width: 500px;
        }

        .logo {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--accent);
            text-align: center;
            margin-bottom: 2rem;
        }

        .form-control, .form-select {
            background-color: var(--ui-bg);
            border: 1px solid var(--line-color);
            color: var(--text-color);
            border-radius: 12px;
            padding: 12px 16px;
        }

        .form-control:focus, .form-select:focus {
            background-color: var(--ui-bg);
            border-color: var(--primary);
            color: var(--text-color);
            box-shadow: 0 0 0 0.2rem rgba(89, 194, 255, 0.25);
        }

        .btn-primary {
            background-color: var(--accent);
            border-color: var(--accent);
            color: var(--bg);
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
        }

        .btn-primary:hover {
            background-color: #FFB454;
            border-color: #FFB454;
        }

        .btn-outline-primary {
            color: var(--primary);
            border-color: var(--primary);
            border-radius: 12px;
        }

        .btn-outline-primary:hover {
            background-color: var(--primary);
            border-color: var(--primary);
            color: var(--bg);
        }

        .text-muted {
            color: var(--ui-text-color) !important;
        }

        .alert-danger {
            background-color: var(--error);
            border-color: var(--error);
            color: var(--text-color);
            border-radius: 12px;
        }

        .form-check-input:checked {
            background-color: var(--accent);
            border-color: var(--accent);
        }

        a {
            color: var(--primary);
            text-decoration: none;
        }

        a:hover {
            color: #73B8FF;
        }

        .step-indicator {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .step {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: var(--ui-text-color);
            color: var(--bg);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 10px;
            font-weight: bold;
        }

        .step.active {
            background-color: var(--accent);
        }

        .step.completed {
            background-color: var(--success);
        }

        .step-line {
            width: 50px;
            height: 2px;
            background-color: var(--ui-text-color);
            margin-top: 14px;
        }

        .step-line.completed {
            background-color: var(--success);
        }
    </style>
</head>
<body>
    <div class="container-fluid register-container">
        <div class="register-card">
            <div class="logo">
                <i class="bi bi-music-note-beamed"></i><br>
                Melodix
            </div>

            <h2 class="text-center mb-4">Crear cuenta nueva</h2>

            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre completo</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Juan Pérez" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nick" class="form-label">Nombre de usuario</label>
                        <input asp-for="Nick" class="form-control" placeholder="juanperez" />
                        <span asp-validation-for="Nick" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Correo electrónico</label>
                    <input asp-for="Email" class="form-control" placeholder="tu@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmarPassword" class="form-label">Confirmar contraseña</label>
                        <input asp-for="ConfirmarPassword" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaNacimiento" class="form-label">Fecha de nacimiento</label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Genero" class="form-label">Género</label>
                        <select asp-for="Genero" class="form-select">
                            <option value="">Seleccionar...</option>
                            <option value="0">Hombre</option>
                            <option value="1">Mujer</option>
                        </select>
                        <span asp-validation-for="Genero" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tipo de cuenta</label>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card" style="cursor: pointer;" onclick="selectAccountType('Usuario')">
                                <div class="card-body text-center">
                                    <i class="bi bi-person" style="font-size: 2rem; color: var(--primary);"></i>
                                    <h5 class="mt-2">Usuario</h5>
                                    <p class="text-muted small">Escucha música y crea playlists</p>
                                    <input type="radio" name="TipoCuenta" value="Usuario" class="form-check-input" checked />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card" style="cursor: pointer;" onclick="selectAccountType('Musico')">
                                <div class="card-body text-center">
                                    <i class="bi bi-music-note" style="font-size: 2rem; color: var(--accent);"></i>
                                    <h5 class="mt-2">Músico</h5>
                                    <p class="text-muted small">Sube y comparte tu música</p>
                                    <input type="radio" name="TipoCuenta" value="Musico" class="form-check-input" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-4 form-check">
                    <input asp-for="AceptaTerminos" type="checkbox" class="form-check-input" />
                    <label asp-for="AceptaTerminos" class="form-check-label">
                        Acepto los <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">términos y condiciones</a> y la <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal">política de privacidad</a>
                    </label>
                    <span asp-validation-for="AceptaTerminos" class="text-danger d-block"></span>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        Crear cuenta
                    </button>
                </div>

                <div class="text-center">
                    <p class="text-muted">¿Ya tienes cuenta?</p>
                    <a href="@Url.Action("Login", "Cuenta")" class="btn btn-outline-primary">
                        Iniciar sesión
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Terms Modal -->
    <div class="modal fade" id="termsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="background-color: var(--panel-bg); border: 1px solid var(--line-color);">
                <div class="modal-header" style="border-bottom: 1px solid var(--line-color);">
                    <h5 class="modal-title">Términos y Condiciones</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Al usar Melodix, aceptas nuestros términos de servicio...</p>
                    <!-- Add actual terms content here -->
                </div>
                <div class="modal-footer" style="border-top: 1px solid var(--line-color);">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Entendido</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Privacy Modal -->
    <div class="modal fade" id="privacyModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="background-color: var(--panel-bg); border: 1px solid var(--line-color);">
                <div class="modal-header" style="border-bottom: 1px solid var(--line-color);">
                    <h5 class="modal-title">Política de Privacidad</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Tu privacidad es importante para nosotros...</p>
                    <!-- Add actual privacy policy content here -->
                </div>
                <div class="modal-footer" style="border-top: 1px solid var(--line-color);">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Entendido</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function selectAccountType(type) {
            document.querySelectorAll('input[name="TipoCuenta"]').forEach(radio => {
                radio.checked = radio.value === type;
            });
            
            document.querySelectorAll('.card').forEach(card => {
                card.style.border = '1px solid var(--line-color)';
            });
            
            event.currentTarget.style.border = '2px solid var(--accent)';
        }
    </script>
</body>
</html>
